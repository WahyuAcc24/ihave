<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/top"
        android:id="@+id/linearHistory"
        android:background="#b1fffefe">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ihave_logo_blue"
            android:id="@+id/imgMuridOrder"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Guru : "
                android:layout_marginTop="5dp"
                android:id="@+id/nama"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mata Pelajaran : "
                android:layout_marginTop="5dp"
                android:id="@+id/mp"
                android:layout_below="@+id/nama"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tanggal : "
                android:id="@+id/tgl"
                android:layout_below="@+id/mp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="ssssss"
                android:textColor="#ffff"
                android:id="@+id/txtStatus"
                android:background="#fe4343"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>