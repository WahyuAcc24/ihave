<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_3"
    android:layout_height="match_parent">

    <include layout="@layout/layout_top"
            android:id="@+id/top"
        >

            </include>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isi kolom dibawah ini untuk melakukan verifikasi pembayaran Anda, Silahkan isi data berikut"
        android:layout_below="@+id/top"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:id="@+id/textView" />


    <EditText
        android:id="@+id/edtNoRek"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_marginTop="72dp"
        android:background="@drawable/edittext_rounded"
        android:hint="No Rekening Anda"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

    </EditText>


    <EditText
        android:id="@+id/edtNamaRek"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edittext_rounded"
        android:hint="Nama Rekening Anda"
        android:textColor="#000000"
        android:layout_below="@+id/edtNoRek"
        android:layout_centerHorizontal="true">

    </EditText>


    <EditText
        android:id="@+id/edtBank"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edittext_rounded"
        android:hint="Nama Rekening Anda"
        android:textColor="#000000"
        android:layout_below="@+id/edtNoRek"
        android:layout_centerHorizontal="true">

    </EditText>

    <EditText
        android:id="@+id/edtNamaBank"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_marginTop="22dp"
        android:background="@drawable/edittext_rounded"
        android:hint="Nama Bank"
        android:textColor="#000000"
        android:layout_below="@+id/edtNamaRek"
        android:layout_centerHorizontal="true">

    </EditText>


    <Button
        android:id="@+id/btnVerifikasi"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_marginTop="62dp"
        android:text="Verifikasi"
        android:textColor="#ffff"
        android:layout_below="@+id/edtNamaBank"
        android:layout_centerHorizontal="true"
        android:background="#3e8dfc">

    </Button>

</RelativeLayout>