<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/backgroundblue"
    tools:context=".Murid.HistoryMuridDetailActivity">

    <include layout="@layout/layout_top_with_back" android:id="@+id/top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama murid"
        android:textColor="#fff"
        android:textSize="40px"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/txtnama_murid"
        android:layout_below="@+id/top"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matpel"
        android:textColor="#fff"
        android:textSize="40px"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/txtnama_matpel"
        android:layout_below="@+id/txtnama_murid"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textColor="#fff"
        android:textSize="40px"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/txtTglDetail"
        android:layout_below="@+id/txtnama_matpel"
        android:layout_alignParentStart="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/txtTglDetail"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:id="@+id/jadwalDetail"
            android:textSize="9pt"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:text="Jadwal "/>
        <include layout="@layout/list_detailjadwal_rv"
            android:id="@+id/jadwal"
            android:layout_below="@+id/jadwalDetail"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>

        <Button
            android:id="@+id/btnOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:text="Menunggu Murid Membayar"
            android:textSize="20sp"
            android:layout_below="@+id/jadwal"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnselesai"
            android:text="Selesai"
            android:typeface="normal"
            android:textStyle="bold"
            android:layout_below="@+id/btnOK"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>



</RelativeLayout>

