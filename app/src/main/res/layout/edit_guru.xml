<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/backgroundblue">


        <include layout="@layout/layout_top_with_back" android:id="@+id/top" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/atas"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">


            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="23dp"-->
            <!--android:text="Pilih Tipe Akun"/>-->


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <!--<RadioGroup-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/radiogroupJenisReg"-->
                <!--android:orientation="horizontal"-->


                <!--&gt;-->

                <!--<RadioButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Murid"-->
                <!--android:id="@+id/radioRegMurid" />-->

                <!--<RadioButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Pengajar"-->
                <!--android:id="@+id/radioRegPengajar" />-->

                <!--</RadioGroup>-->

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Email"/>

            <EditText
                android:id="@+id/txtEmailEdtGuru"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:padding="10dp"
                android:hint="Email"
                android:textSize="8pt"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/txtPasswordEdtGuru"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:hint="password"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/txtUsernameEdtGuru"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:padding="10dp"
                android:hint="Nama"
                android:inputType="text"
                android:textSize="8pt" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. HP"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/txtPhoneEdtGuru"
                android:hint="No. Hp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:padding="10dp"
                android:inputType="textPhonetic"
                android:textSize="8pt" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pilih Jenis Kelamin"/>


            <EditText
                android:id="@+id/txtPilihJkEdtGuru"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:hint="Pria / Wanita"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="8pt" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/txtBirthplaceEdtGuru"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:hint="Tempat Lahir"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/txtBirthdayEdtGuru"
                android:hint="DD/MM/YYYY"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sertifikat"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/txtSertifikatEdtGuru"
                android:hint="Isi Sertifikatmu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbi"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/txtHobbiEdtGuru"
                android:hint="Hobbi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_rounded"
                android:padding="10dp"
                android:inputType="text"
                android:textSize="8pt" />



            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:id="@+id/imgUserEdtGuru"
                android:src="@drawable/user"
                android:background="#ffff"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_below="@+id/imgUserEdtGuru"
                android:layout_gravity="center"
                android:text="Ubah foto"
                android:layout_marginTop="10dp"
                android:id="@+id/ubahFotoProfilEdtGuru"
                android:background="#ffff"
                />
            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Lengkapi Data"
                android:background="#fff"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/btnLengkapi"

                />

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="Simpan"
                android:id="@+id/buttonDaftarEdtGuru"
                android:background="#fff"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:onClick="Masuk"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center" />


        </LinearLayout>


    </RelativeLayout>
</ScrollView>